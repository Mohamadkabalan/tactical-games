{#
/**
 * Block Name: Example block
 *
 * This is the template that displays the example block.
 */
#}

{% if is_preview %}
    <h2 class="text-primary">I will only appear in the editor.</h2>
{% endif %}

<div id="example-{{ block.id }}" class="wrapper">
    <h4>example block</h4>
    <h2>{{ fields.custom_text_field }}</h2>
    <p>{{ fields.description }}</p>
</div>
<style type="text/css">
    #testimonial-{{ block.id }} {
        background: {{ fields.background_color }};
        color: {{ fields.text_color }};
    }
</style>