{#
/**
 * Block Name: Example block
 *
 * This is the template that displays the example block.
 */
#}

{% if is_pitem %}
	<h2 class="text-primary">I will only appear in the editor.</h2>
{% endif %}

<div id="example-{{ block.id }}" class="wrapper">
	<h4>Meet the girls</h4>
	{% for article in articles %}
		<article class="post-type-{{ article.post_type }}" id="post-{{ article.ID }}">
			<img src="{{ article.thumbnail.src|resize(1200, 300) }}">
			<section class="article-content">
				<h1 class="article-h1">{{ article.title }}</h1>
				<a href="{{ article.link }}">{{ _e('edit') }}</a>
				<p class="blog-author">
					<span>By</span>
					<a href="{{article.author.path}}">
						{{ article.author.name }}
					</a>
					<span>&bull;</span>
					<time datetime="{{ article.date|date('Y-m-d H:i:s') }}">{{ article.date }}</time>
				</p>
				<div class="article-body">
					{{article.content}}
				</div>
			</section>
		</article>
	{% endfor %}

</div>
