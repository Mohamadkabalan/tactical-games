<!-- Footer -->
<div class="footer">
	<div class="container-xl">
		<div class="row">
			<div class="col-md mb-4 mb-md-0">
				<div class="footer__logo">
					<a href="{{ site.url }}">{{ custom_logo_url }}</a>
				</div>
			</div>
			<div class="col-md-auto mb-4 mb-md-0 pe-md-5">
				<ul class="footer__links-list">
					{% for item in footer_menu.items[:footer_menu.items | length / 2] %}
						<li>
							<a href="{{ item.link }}">{{ item.title }}</a>
							{% if item.children %}
								<ul class="nav-drop">
									{% for child in item.children %}
										<li class="nav-drop-item">
											<a href="{{ child.link }}">{{ child.title }}</a>
										</li>
									{% endfor %}
								</ul>
							{% endif %}
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-md-auto mb-4 mb-md-0">
				<ul class="footer__links-list">
					{% for item in footer_menu.items[footer_menu.items | length / 2 :] %}
						<li>
							<a href="{{ item.link }}">{{ item.title }}</a>
							{% if item.children %}
								<ul class="nav-drop">
									{% for child in item.children %}
										<li class="nav-drop-item">
											<a href="{{ child.link }}">{{ child.title }}</a>
										</li>
									{% endfor %}
								</ul>
							{% endif %}
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-md mb-4 mb-md-0">
				<div class="footer__social-links">
					{% for item in social_menu.items %}
							<a href="{{ item.link }}">
								{% if item.title == 'Facebook' %}
								<i class="fab fa-facebook-square"></i>
								{% elseif item.title == 'Instagram' %}
								<i class="fab fa-instagram"></i>
								{% elseif item.title == 'Youtube' %}
								<i class="fab fa-youtube-square"></i>
								{% elseif item.title == 'Twitter' %}
								<i class="fab fa-twitter-square"></i>
								{% elseif item.title == 'Linkedin' %}
								<i class="fab fa-linkedin"></i>
								{% else %}
								<i class="fas fa-hashtag"></i>
								{% endif %}
							</a>
							
							{% if item.children %}
								<ul class="nav-drop">
									{% for child in item.children %}
										<li class="nav-drop-item">
											<a href="{{ child.link }}">{{ child.title }}</a>
										</li>
									{% endfor %}
								</ul>
							{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="footer__bottom">
			<p>Copyright {{"now"|date('Y')}} Tactical Games | Site by <a href="https://2acommerce.com/" target="_blank">2A Commerce</a> </p>
		</div>
	</div>
</div>
<!-- END Footer -->
